{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Wrapsher",
  "scopeName": "source.wrapsher",
  "fileTypes": ["wsh"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#functions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.wrapsher",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.wrapsher",
          "match": "\\b(if|else|use|module|meta|type|fun|return|while|break|continue|shell)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.wrapsher",
          "match": "\\b(any|int|bool|string|reflist|ref|list|map|pair|error|builtin)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.wrapsher",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.wrapsher",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.wrapsher",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.triple.wrapsher",
          "begin": "'''",
          "end": "'''"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.wrapsher",
          "match": "\\b([A-Za-z_/][A-Za-z0-9_/]*)\\s*(?=\\()"
        }
      ]
    }
  }
}
